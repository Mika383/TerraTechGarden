{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2015"], // Add ES2015 for Set, Map, Iterable, Symbol
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler", // Use 'Bundler' for Vite compatibility
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true, // Allow .tsx imports
    "types": ["react", "react-dom", "node"]
    
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}